<div class="row">
  <div class="col-md-10 mx-auto">

    <h2>Admin - Clientes</h2>

    <% flash.get('mensaje').forEach(function (msg) { %>
      <div class="alert alert-info text-center" role="alert">
        <%=msg%>
      </div>
    <% }) %>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% clientes.forEach( cliente => { %>
          <tr>
            <td><a href="/admin/clientes/<%=cliente.id%>"><%=cliente.id%></a></td>
            <td><%=cliente.nombre%></td>
            <td><%=cliente.email%></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>