<div class="row">
  <div class="col-md-10 mx-auto">

    <% flash.get('mensaje').forEach(function (msg) { %>
    <div class="alert alert-info text-center" role="alert">
      <%=msg%>
    </div>
    <% }) %>

    <h2>Admin - Ordenes Clientes</h2>

    <table class="table">
      <thead class="text-center">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Fecha</th>
          <th scope="col">Total Fotos</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% ordenes.forEach( orden => { %>
          <tr>
            <td scope="row"><a href="/admin/fotos-ordenes/<%=orden.id%>"><%=orden.id%></a></td>
            <td scope="row"><%=orden.fecha%></td>
            <td scope="row"><%=orden.total%></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
